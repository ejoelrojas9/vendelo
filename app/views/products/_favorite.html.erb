<div id="favorite">
  <% if product.favorite %>
    <%= link_to '💔', favorite_path(product_id: product.id), data:{
      turbo_method: :delete
    }, class:'mx-1' %>
  <% else %>
    <%= link_to '❤️', favorites_path(product_id: product.id), data:{
      turbo_method: :post
    }, class:'mx-1' %>
  <% end %>
</div>