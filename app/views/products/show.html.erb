<div class="mx-3">
  <%= link_to t('.edit'), edit_product_path(@product), class:'mx-1' if @product.owner? %>

  <%= link_to t('.delete'), product_path(@product), data:{
    turbo_method: :delete,
    turbo_confirm: t('common.confirm') 
    }, class:'mx-1' if @product.owner? %>

  <%= link_to "#{t('.view_profile')} #{@product.user.username}", user_path(@product.user.username), class:'mx-1' %>

  <% if @product.favorite %>
    <%= link_to '💔', favorite_path(product_id: @product.id), data:{
      turbo_method: :delete
    }, class:'mx-1' %>
  <% else %>
    <%= link_to '❤️', favorites_path(product_id: @product.id), data:{
      turbo_method: :post
    }, class:'mx-1' %>
  <% end %>
</div>
<div class="mx-5">
    <br><br><%= image_tag @product.photo, width: 150 if @product.photo.attached? %>
  <div class="login-title">
    <h1 class='title'><%= @product.title %></h1>
  </div>
  <div class="mt-3">
    <p class='description'><%= @product.description %></p>

    <span class='price'><%= @product.price %>$</span><br><br>

  </div>


</div>