<div class="mt-3 mx-5">
    <br><br><%= image_tag @product.photo, width: 150 if @product.photo.attached? %>
  <div class="login-title">
    <h1 class='title'><%= @product.title %></h1>
  </div>
  <div class="mt-3">
    <p class='description'><%= @product.description %></p>

    <span class='price'><%= @product.price %>$</span><br><br>

    <%= link_to 'Edit product', edit_product_path(@product) if @product.owner? %><br><br>

    <%= link_to 'Delete Product', product_path(@product), data:{
      turbo_method: :delete,
      turbo_confirm: t('common.confirm') 
    } if @product.owner? %>
    <%= link_to "#{t('.view_profile')} #{@product.user.username}", user_path(@product.user.username) %>
  </div>


</div>