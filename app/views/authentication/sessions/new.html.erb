<div class="container bg-dark text-white">
  <div class="row">
    <div class="col-md-4 text-center mt-3 ">
    <h1>SellIt</h1>
      </div>
    <div class="col-md-8">
      <div class="login-title text-center mt-4">
        <h1>Log in</h1>
      </div>
        <div class="block push-bit">
        <%= form_with(url: sessions_path) do |form| %>
          <div class="form-group mt-3">
            <div class="col-xs-12">
              <div>
                <td><%= form.label :login %></td><br>
                <td><%= form.text_field :login, required: true, autofocus: true, autocomplete: "email", class: 'form-control input-lg', placeholder: 'Email' %></td>
              </div>
            </div>
          </div>  
          
          <div class="form-group mt-3">
            <div class="col-xs-12">
              <div>
                <%= form.label :password %>
                <%= form.password_field :password, required: true, autofocus: true, class: 'form-control input-lg', autocomplete: "current-password", placeholder: 'Password' %>
              </div>
            </div>
          </div>  
          <div class="col-xs-12 text-right text-end p-5 px-3">
            <%= form.submit "Login to Dashboard", class: 'btn btn-in btn-primary mt-3' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>